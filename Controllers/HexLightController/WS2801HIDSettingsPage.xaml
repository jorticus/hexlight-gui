<UserControl x:Class="HexLight.Control.WS2801HIDSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexLight.Control" 
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance {x:Type local:WS2801ControllerHIDSettings}}" Height="105" Width="145">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,34,0,0" TextWrapping="Wrap" Text="{Binding DeviceID}" VerticalAlignment="Top" Width="120"/>
        <Label Content="USB Device ID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
