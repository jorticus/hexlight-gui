<Window x:Class="HexLight.ExceptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExceptionDialog" Height="140" Width="408" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="Height" MinHeight="140">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="41"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnAbort" Content="Abort" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_Click" Grid.Row="1" Height="20"/>
        <Button x:Name="btnIgnore" Content="Ignore" HorizontalAlignment="Right" Margin="0,0,90,10" Width="75" Height="20" VerticalAlignment="Bottom" Click="Button_Click_1" Grid.Row="1"/>
        <Button x:Name="btnDebug" Content="Debug" HorizontalAlignment="Right" Margin="0,0,170,10" VerticalAlignment="Bottom" Width="75" Click="Button_Click_2" Grid.Row="1" Height="20"/>
        <TextBlock x:Name="messageLabel" Margin="50,10,10,10" TextWrapping="Wrap" Text="Message"/>
        <Image Margin="8,5,0,0" Width="37" Height="37"  Source="error.png" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Left"/>

    </Grid>
</Window>
